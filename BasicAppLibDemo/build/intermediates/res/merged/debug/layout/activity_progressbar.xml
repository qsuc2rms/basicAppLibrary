<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_pupprogresscircle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="弹出式进度条" />

            <Button
                android:id="@+id/btn_pupprogresscircle2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="弹出圆形进度条" />
            
                        <Button
                android:id="@+id/btn_pupprogresshorizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="弹出条形进度条" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小号进度条" />

            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普通进度条" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大号进度条" />

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_progresswindowcircle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="标题栏中圆形进度条" />

            <Button
                android:id="@+id/btn_progresswindowhorizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="标题栏中条形进度条" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="条形进度条" />

            <Button
                android:id="@+id/btn_progressgo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="启动进度条" />

            <ProgressBar
                android:id="@+id/progressbar_updown"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:max="100"
                android:progress="5"
                android:secondaryProgress="100" />
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/D:/code/workspaceAS/BasicAppLibrary/BasicAppLibDemo/src/main/res/layout/activity_progressbar.xml -->