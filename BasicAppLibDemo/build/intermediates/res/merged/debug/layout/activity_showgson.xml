<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_simplejson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="简单java对象映射为json字符串" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="将简单的Java对象映射为Json字符串:" />

            <TextView
                android:id="@+id/txt_simplejson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_complexjson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="复杂java对象映射为json字符串" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="将存在复杂嵌套结构的Java对象映射为Json字符串:" />

            <TextView
                android:id="@+id/txt_complexjson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_gsonobject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="将json字符串映射为java对象" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改字符串，并点击下方提取按钮，重新生成java对象" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <EditText
                    android:id="@+id/edit_complexjson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btn_parsegsonobject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="映射为java对象并提取city值" />

                    <TextView
                        android:id="@+id/txt_parsecity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_gsonlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="将json字符串映射为java对象列表" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改字符串，并点击下方提取按钮，重新生成java对象列表" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/edit_complexjsonlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btn_parsegsonobjectlist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="映射为java对象并提取city值" />

                    <TextView
                        android:id="@+id/txt_parsecitylist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/D:/code/workspaceAS/BasicAppLibrary/BasicAppLibDemo/src/main/res/layout/activity_showgson.xml -->